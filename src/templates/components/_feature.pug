//- feature.pug component

include ./_feature-item.pug

section.bg-light-grayish-blue
    .feature.container.px-10.pt-15.pb-15.px-0--lg
        .feature_header.text-center.text-left--lg
            h2.title.text-size-12.mb-5 Why choose Easybank?
            p.description We leverage Open Banking to turn your bank account into your finalcial hub.
        .feature_body.flex--lg
            +feature-item("./assets/icon-online.svg", "Online Banking", "Our modern web and mobile applications allow you to keep track of your finances wherever you are")
            +feature-item("./assets/icon-budgeting.svg", "Simple Budgeting", "See exactly where your money goes each month. Receive notifications when you're close to hitting your limits")
            +feature-item("./assets/icon-onboarding.svg", "Fast Onboarding", "We don't do branches. Open your account in minutes online and start taking control of your finances right away")
            +feature-item("./assets/icon-api.svg", "Open API", "Manage your savings, investments, pension, and much more from one account. Tracking your money has never been easier")